{
  "name": "@shortwave/quill-delta",
  "version": "4.2.4",
  "description": "Format for representing rich text documents and changes.",
  "author": "Jason Chen <jhchen7@gmail.com>",
  "homepage": "https://github.com/quilljs/delta",
  "types": "dist/Delta.d.ts",
  "main": "dist/Delta.js",
  "dependencies": {
    "fast-diff": "1.2.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.isequal": "^4.5.0"
  },
  "devDependencies": {
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/lodash.isequal": "^4.5.5",
    "@types/node": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jasmine": "^3.9.0",
    "np": "^7.5.0",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "typescript": "^4.4.2"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "prepack": "npm run build",
    "release": "np",
    "lint": "eslint 'src/**/*.ts'",
    "test": "npm run build; jasmine test/*.js test/**/*.js",
    "test:coverage": "nyc npm run test",
    "test:coverage:report": "nyc report --reporter=lcov"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-namespace": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shortwave/delta"
  },
  "bugs": {
    "url": "https://github.com/quilljs/delta/issues"
  },
  "keywords": [
    "rich text",
    "ot",
    "operational transform",
    "delta"
  ]
}
